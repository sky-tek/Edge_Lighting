<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:id="@android:id/background">
        <shape>
            <gradient android:startColor="#424242" android:endColor="#424242" android:angle="90" android:centerColor="#424242"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient android:startColor="#4fbcff" android:endColor="#4fbcff" android:angle="180" android:centerColor="#4fbcff"/>
                <corners android:radius="5dp"/>
            </shape>
        </clip>
    </item>
</layer-list>
