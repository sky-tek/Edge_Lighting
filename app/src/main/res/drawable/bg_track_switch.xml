<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_checked="true">
        <shape android:dither="true" android:visible="true" android:shape="rectangle" android:useLevel="false">
            <size android:height="1dp" android:width="3dp"/>
            <gradient android:startColor="#90EE90" android:endColor="#90EE90" android:angle="180" android:centerColor="#90EE90"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:dither="true" android:visible="true" android:shape="rectangle" android:useLevel="false">
            <gradient android:startColor="#424242" android:endColor="#424242" android:angle="180"/>
            <corners android:radius="10dp"/>
            <size android:height="1dp" android:width="3dp"/>
        </shape>
    </item>
</selector>

